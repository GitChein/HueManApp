<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/clr2"
        android:layout_width="83dp"
        android:layout_height="63dp"
        app:layout_constraintStart_toEndOf="@+id/clr1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clr3"
        android:layout_width="83dp"
        android:layout_height="63dp"
        app:layout_constraintStart_toEndOf="@+id/clr2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clr4"
        android:layout_width="83dp"
        android:layout_height="63dp"
        app:layout_constraintStart_toEndOf="@+id/clr3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clr5"
        android:layout_width="83dp"
        android:layout_height="63dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clr4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clr1"
        android:layout_width="83dp"
        android:layout_height="63dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/paletteName"
        android:layout_width="414dp"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clr3" />
</androidx.constraintlayout.widget.ConstraintLayout>